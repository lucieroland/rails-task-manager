<h1> Tasks</h1>
<% @tasks.each do |task| %>
  <%= link_to task.title, task_path(task) %>
    <% if task.completed == true %>
    <p> <i class="far fa-check-square"></i> </p>
    <% else %>
    <p> <i class="fas fa-stop"></i> </p>
    <% end %>


  <%= link_to "Delete", task_path(task), method: :delete,  data: { confirm: "Are you sure?" } %>
<% end %>

